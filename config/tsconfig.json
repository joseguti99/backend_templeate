{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "../src",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules"]
}